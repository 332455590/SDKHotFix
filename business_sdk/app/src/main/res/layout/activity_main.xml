<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/init_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="初始化业务sdk"
            tools:layout_editor_absoluteY="16dp" tools:layout_editor_absoluteX="16dp"/>

    <Button
            android:id="@+id/call_bug_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="调用有bug业务sdk方法"
            tools:layout_editor_absoluteX="16dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/init_btn"/>

    <Button
            android:id="@+id/fix_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="修复bug\n（初始化hotfix sdk，请求应用补丁\n（延迟初始化，避免一进来就初始化会把补丁给打上，看不到效果））"
            tools:layout_editor_absoluteX="16dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/call_bug_btn"/>


</android.support.constraint.ConstraintLayout>